<h1><%= @company.name %></h1>
 
 <div class="row">
   <div class="col-md-8">
        <p><%= @company.description %></p>
        <p><%= @company.address %></p>
        <p><%= @company.city %></p>
        <p><%= @company.PostalCode %></p>
        <p><%= @company.country %></p>
   </div>
     
   <div class="col-md-4">

     <%= link_to "Edit", edit_company_path(@company), class: 'btn btn-success' %>
    <%= button_to "Delete Company", @company, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this company?'} %>
   </div>
 </div>